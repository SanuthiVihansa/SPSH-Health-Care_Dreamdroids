<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patient_profile_bg"
    android:backgroundTint="#3C3A3A"
    android:backgroundTintMode="add"
    tools:context=".Patient_Home">

    <TextView
        android:id="@+id/tv_patientProfile_sathira"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"
        android:fontFamily="serif-monospace"
        android:text="@string/tv_patientProfile_sathira"
        android:textColor="@color/text_color"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_viewAppoint_sathira"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/update_button_color"
        android:onClick="onClickViewAppointmentBtn"
        android:text="@string/btn_viewAppoint_sathira"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_patientProfile_sathira" />

    <Button
        android:id="@+id/btn_makeAppoint_sathira"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/update_button_color"
        android:onClick="onClickMakeAppointmentBtn"
        android:text="@string/btn_makeAppoint_sathira"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewLabRep_sathira" />

    <Button
        android:id="@+id/btn_viewLabRep_sathira"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/update_button_color"
        android:text="@string/btn_viewLabRep_sathira"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewAppoint_sathira" />

    <ImageView
        android:id="@+id/iv_pharma_sathira"
        android:layout_width="83dp"
        android:layout_height="51dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_makeAppoint_sathira"
        app:srcCompat="@drawable/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>